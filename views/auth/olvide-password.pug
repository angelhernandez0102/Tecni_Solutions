extends ../layout/index

block contenido 
    div.py-10.bg-Light-grayish-cyan 
        h1.text-4xl.my-10.font-extrabold.text-center.text-Very-dark-cyan TECNI 
           span.font-normal.text-orange-500 SOLUTIONS 
        h2.text-center.text-2xl.font-extrabold= pagina
        if errores 
          div(class="max-w-md mx-auto my-10")
            each error in errores 
             p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div.mt-8.mx-auto.max-w-md
         .bg-white.py-8.px-4.shadow
            form.space-y-5(method="POST" action="/auth/olvide-password" noValidate)
               input(type="hidden" name="_csrf" value= csrfToken)
               div
                  label.block.text-sm.uppercase.text-Very-dark-cyan.mb-2.font-extrabold(for="email") CORREO ELECTRONICO DE REGISTRO
                  input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="email" name="email")
               div.flex.items-center.justify-between
                 a.text-Very-dark-cyan.text-xs.font-extrabold(href="/auth/registro") ¿NO TIENES CUENTA? CREA UNA
                 a.ttext-Very-dark-cyan.text-xs.font-extrabold(href="/auth/login") ¿YA TIENES UNA CUENTA? INICIA SESION
              
               input(class="w-full bg-Very-dark-cyan hover:indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Enviar Instrucciones") 