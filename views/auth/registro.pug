extends ../layout/index

block contenido 
    div.py-10.bg-Light-grayish-cyan 
        h1.text-4xl.my-10.font-extrabold.text-center.text-Very-dark-cyan TECNI
           span.font-normal.text-orange-500 SOLUTIONS 
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores 
          div(class="max-w-md mx-auto my-10")
            each error in errores 
             p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div.mt-8.mx-auto.max-w-md
         .bg-white.py-8.px-4.shadow
            form.space-y-5(method="POST" action="/auth/registro" noValidate)
               input(type="hidden" name="_csrf" value= csrfToken)
               div
                  label.block.text-sm.uppercase.text-Very-dark-cyan.mb-2.font-extrabold(for="nombre") TU NOMBRE
                  input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400.shadow-md(placeholder="Tu Nombre" type="text" name="nombre" value= usuario ? usuario.nombre: '')
               div
                  label.block.text-sm.uppercase.text-Very-dark-cyan.mb-2.font-extrabold(for="email") INTRODUCE TU CORREO ELECTRONICO
                  input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400.shadow-md(placeholder="Tu Email" type="email" name="email" value= usuario ? usuario.email: '')
               div
                  label.block.text-sm.uppercase.text-Very-dark-cyan.mb-2.font-extrabold(for="password") CREA UNA CONTRASEÑA 
                  input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400.shadow-md(placeholder="Tu Password" type="password" name="password")
               div
                  label.block.text-sm.uppercase.text-Very-dark-cyan.mb-2.font-extrabold(for="repetir_password") REPITE LA CONTRASEÑA 
                  input#repetir_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400.shadow-md(placeholder="Repite tu Password" type="password" name="repetir_password")
               
               
               div.flex.items-center.justify-between
                 a.text-Very-dark-cyan.text-xs.font-extrabold(href="/auth/login") ¿YA TIENES UNA CUENTA? INICIA SESION
                 a.text-Very-dark-cyan.text-xs.font-extrabold(href="/auth/olvide-password") OLVIDE MI CONTRASEÑA

               input(class="w-full bg-Very-dark-cyan hover:indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Crear Cuenta") 